<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndergradProject.Pages.CheckoutAddItem"
             Title="CheckoutAddItem">
    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
        <Label Text="Item Name" TextColor="White"/>
        <Entry x:Name="itemNameEntry" BackgroundColor="DarkGray" TextColor="White"/>

        <HorizontalStackLayout Spacing="10">
            <VerticalStackLayout>
                <Label Text="Quantity" TextColor="White"/>
                <Entry x:Name="manualQuantityEntry" BackgroundColor="DarkGray" TextColor="White" Keyboard="Numeric"/>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Unit Price" TextColor="White"/>
                <Entry x:Name="manualPriceEntry" BackgroundColor="DarkGray" TextColor="White" Keyboard="Numeric"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <CheckBox x:Name="matchWithInventoryCheckbox"/>
        <Label Text="Match with existing in inventory" TextColor="White"/>

        <Button 
            Text="Add Item" 
            BackgroundColor="DarkGray" 
            TextColor="White" 
            />
    </VerticalStackLayout>
</ContentPage>