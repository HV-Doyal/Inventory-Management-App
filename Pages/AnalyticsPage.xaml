<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndergradProject.Pages.AnalyticsPage"
             Title="AnalyticsPage">
    <VerticalStackLayout>
        <Label 
            Text="Analytics and AI Insights"
            FontSize="24"
            HorizontalOptions="Center" 
            Margin="0,20" />

        <Button
            x:Name="trainModelButton"
            Text="Train Model"
            Clicked="trainModelButton_Clicked"          
            />

        <Label
            x:Name="statusLabel"
            Text=""
            FontSize="14"
            HorizontalOptions="Center"
            />

        <Button
            x:Name="predictButton"
            Text="Predict"
            Clicked="predictButton_Clicked"          
            />

    </VerticalStackLayout>
</ContentPage>