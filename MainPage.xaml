<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UndergradProject.MainPage"
    BackgroundColor="{StaticResource BgColor}">

    <Grid RowDefinitions="Auto, *">
        
        <!-- First Grid: User Info Section -->
        <VerticalStackLayout 
            Padding="10" 
            Spacing="10"
            Grid.Row="0">

            <!-- Dashboard Title -->
            <Border
                BackgroundColor="{StaticResource ButtonColor}" 
                StrokeShape="RoundRectangle 10" 
                Padding="10"
                StrokeThickness="0">

                <Label 
                    Text="Dashboard" 
                    FontSize="36" 
                    TextColor="{StaticResource TextColor}" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    />
            </Border>



            <!-- User Info Display -->
            <Border 
                BackgroundColor="{StaticResource ButtonColor}" 
                StrokeShape="RoundRectangle 10" 
                Padding="10"
                StrokeThickness="0">

                <Grid 
                    RowDefinitions="Auto, Auto, Auto" 
                    ColumnDefinitions="*, Auto">

                    <!-- Welcome Text -->
                    <Label 
                        Text="Welcome, Username" 
                        TextColor="{StaticResource TextColor}" 
                        FontSize="24" 
                        VerticalOptions="Center"
                        Grid.Row="0"
                        Grid.Column="0"/>

                    <!-- Profile Image -->
                    <Image 
                        Source="default_profile.png" 
                        HeightRequest="80" 
                        WidthRequest="80"
                        VerticalOptions="Center"
                        Grid.Row="0"
                        Grid.Column="1"/>

                    <!-- Edit Profile Button -->
                    <Button 
                        Text="Edit Profile" 
                        BackgroundColor="Transparent" 
                        TextColor="{StaticResource TextColor}" 
                        HorizontalOptions="Start"
                        Grid.Row="1"
                        Grid.Column="0"/>

                    <!-- Log Out Button -->
                    <Button 
                        Text="Log Out" 
                        BackgroundColor="Transparent" 
                        TextColor="{StaticResource TextColor}" 
                        HorizontalOptions="Start"
                        Grid.Row="2"
                        Grid.Column="0"/>

                </Grid>

            </Border>

        </VerticalStackLayout>

        <!-- Second Grid: Buttons Section (Expands to Fill Remaining Space) -->
        <Grid 
            RowDefinitions="Auto, Auto, Auto, Auto" 
            ColumnDefinitions="*, Auto, Auto, *" 
            Padding="10" 
            ColumnSpacing="10" 
            RowSpacing="20"
            Grid.Row="1"
            VerticalOptions="Fill">

            <!-- Checkout Button -->
            <Button 
                Text="Checkout" 
                ImageSource="checkout.png" 
                BackgroundColor="{StaticResource ButtonColor}" 
                TextColor="{StaticResource TextColor}" 
                FontSize="36" 
                CornerRadius="10"
                HeightRequest="120"
                ContentLayout="Right, 20"
                Grid.Row="0" 
                Grid.Column="1" 
                Grid.ColumnSpan="2"/>       

            <!-- Analytics Button -->
            <Button 
                Text="Analytics" 
                ImageSource="analytics.png" 
                BackgroundColor="{StaticResource ButtonColor}" 
                TextColor="{StaticResource TextColor}" 
                FontSize="36" 
                CornerRadius="10" 
                HeightRequest="120"
                ContentLayout="Right, 20"
                Grid.Row="1" 
                Grid.Column="1" 
                Grid.ColumnSpan="2"/>

            <!-- Inventory Button -->
            <Button 
                Text="Inventory" 
                ImageSource="inventory.png" 
                BackgroundColor="{StaticResource ButtonColor}" 
                TextColor="{StaticResource TextColor}" 
                FontSize="36" 
                CornerRadius="10" 
                HeightRequest="120"
                ContentLayout="Right, 20"
                Grid.Row="2" 
                Grid.Column="1" 
                Grid.ColumnSpan="2"
                />

            <!-- Add & Edit Item Buttons in a Horizontal Layout -->
            <HorizontalStackLayout 
                Grid.Row="3" 
                Grid.Column="1" 
                Grid.ColumnSpan="2" 
                Spacing="20">

                <Button 
                    Text="ADD ITEM" 
                    ImageSource="add_item.png" 
                    BackgroundColor="{StaticResource ButtonColor}" 
                    TextColor="{StaticResource TextColor}" 
                    FontSize="18" 
                    CornerRadius="10" 
                    HeightRequest="80" 
                    ContentLayout="Right, 20"
                    />

                <Button 
                    Text="EDIT ITEM" 
                    ImageSource="edit_item.png" 
                    BackgroundColor="{StaticResource ButtonColor}" 
                    TextColor="{StaticResource TextColor}" 
                    FontSize="18" 
                    CornerRadius="10" 
                    HeightRequest="80" 
                    ContentLayout="Right, 20"
                    />

            </HorizontalStackLayout>

        </Grid>

    </Grid>

</ContentPage>
