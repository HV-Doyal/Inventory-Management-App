<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndergradProject.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Dashboard Title -->
            <Label Text="Dashboard" FontSize="24" TextColor="White" HorizontalOptions="Center" />

            <!-- User Info Display -->
            <Frame BackgroundColor="DarkGray" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Welcome, Username" TextColor="White" FontSize="18" />
                    <Button Text="Edit Profile" BackgroundColor="Transparent" TextColor="LightGray" />
                    <Button Text="Log Out" BackgroundColor="Transparent" TextColor="LightGray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Checkout Button -->
            <Button Text="Checkout" ImageSource="Assets/checkout.png" BackgroundColor="DarkGray" TextColor="White" FontSize="18" CornerRadius="10" HeightRequest="80" />

            <!-- Analytics Button -->
            <Button Text="Analytics" ImageSource="Assets/analytics.png" BackgroundColor="DarkGray" TextColor="White" FontSize="18" CornerRadius="10" HeightRequest="80" />

            <!-- Add & Edit Item Buttons -->
            <HorizontalStackLayout>
                <Button Text="ADD ITEM" ImageSource="Assets/additem.png" BackgroundColor="DarkGray" TextColor="White" FontSize="18" CornerRadius="10" HeightRequest="80" WidthRequest="150" />
                <Button Text="EDIT ITEM" ImageSource="Assets/edititem.png" BackgroundColor="DarkGray" TextColor="White" FontSize="18" CornerRadius="10" HeightRequest="80" WidthRequest="150" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
