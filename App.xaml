<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UndergradProject"
             x:Class="UndergradProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="BgColor">#121212</Color>
            <Color x:Key="ButtonColor">#1E1D1D</Color>
            <Color x:Key="TextColor">#FFFFFF</Color>
            <x:Array x:Key="CategoryList" Type="{x:Type x:String}">
                <x:String>Drinks</x:String>
                <x:String>Alcohol</x:String>
                <x:String>Food</x:String>
                <x:String>Fruit</x:String>
                <x:String>Vegetable</x:String>
                <x:String>Grocery</x:String>
                <x:String>Snacks</x:String>
                <x:String>Meat</x:String>
                <x:String>Household</x:String>
                <x:String>Other</x:String>
            </x:Array>
        </ResourceDictionary>
    </Application.Resources>
</Application>
